<%- include('partials/header', { title: 'Products Management' }) %>

<div class="products-admin-container">
    <div class="page-header">
        <h2>All Products</h2>
        <a href="/admin/products/add" class="btn btn-primary">‚ûï Add New Product</a>
    </div>

    <% if (success) { %>
        <div class="alert alert-success">
            <%= success %>
        </div>
    <% } %>

    <div class="products-table-wrapper">
        <% if (products && products.length > 0) { %>
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr id="product-<%= product._id %>">
                            <td>
                                <img src="<%= product.image %>" alt="<%= product.name %>" class="product-thumb" onerror="this.src='/images/pizza_image.png'">
                            </td>
                            <td><strong><%= product.name %></strong></td>
                            <td><span class="badge badge-category"><%= product.category %></span></td>
                            <td>$<%= product.price.toFixed(2) %></td>
                            <td class="description-cell"><%= product.description.substring(0, 50) %><%= product.description.length > 50 ? '...' : '' %></td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-edit">‚úèÔ∏è Edit</a>
                                    <button onclick="deleteProduct('<%= product._id %>', '<%= product.name %>')" class="btn btn-sm btn-delete">üóëÔ∏è Delete</button>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

            <!-- Pagination -->
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="?page=<%= currentPage - 1 %>&limit=<%= limit %>" class="pagination-btn">‚Üê Previous</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">‚Üê Previous</span>
                    <% } %>
                    
                    <span class="pagination-info">Page <%= currentPage %> of <%= totalPages %> (<%= totalProducts %> products)</span>
                    
                    <% if (currentPage < totalPages) { %>
                        <a href="?page=<%= currentPage + 1 %>&limit=<%= limit %>" class="pagination-btn">Next ‚Üí</a>
                    <% } else { %>
                        <span class="pagination-btn disabled">Next ‚Üí</span>
                    <% } %>
                </div>
            <% } %>
        <% } else { %>
            <div class="no-data">
                <p>No products found.</p>
                <a href="/admin/products/add" class="btn btn-primary">Add Your First Product</a>
            </div>
        <% } %>
    </div>
</div>

<script>
async function deleteProduct(id, name) {
    if (!confirm(`Are you sure you want to delete "${name}"? This action cannot be undone.`)) {
        return;
    }

    try {
        const response = await fetch(`/admin/products/${id}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json'
            }
        });

        const data = await response.json();

        if (response.ok) {
            alert(`Product "${name}" deleted successfully!`);
            document.getElementById(`product-${id}`).remove();
            
            // Check if table is empty
            const tbody = document.querySelector('.admin-table tbody');
            if (tbody && tbody.children.length === 0) {
                location.reload();
            }
        } else {
            alert(data.error || 'Error deleting product');
        }
    } catch (error) {
        alert('Error deleting product: ' + error.message);
    }
}
</script>

<%- include('partials/footer') %>

