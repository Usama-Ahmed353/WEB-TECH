<script>
    document.addEventListener('DOMContentLoaded', function() {
        const viewMoreBtn = document.getElementById('viewMoreBtn');
        const testimonialsInitial = document.getElementById('testimonialsInitial');
        const testimonialsAll = document.getElementById('testimonialsAll');
        
        let isShowingAll = false;

        // Toggle between initial view and all testimonials
        viewMoreBtn.addEventListener('click', function() {
            if (!isShowingAll) {
                // Switch to all testimonials view
                testimonialsInitial.classList.add('hidden');
                testimonialsAll.classList.remove('hidden');
                viewMoreBtn.textContent = 'Show Less';
                isShowingAll = true;
            } else {
                // Switch back to initial view
                testimonialsAll.classList.add('hidden');
                testimonialsInitial.classList.remove('hidden');
                viewMoreBtn.textContent = 'View All Testimonials';
                isShowingAll = false;
            }
        });
    });
